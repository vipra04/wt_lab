<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>VIT Clubs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding: 30px;
    }
    .form-control, .btn {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>

<div class="container">
  <h2 class="text-center mb-4">Clubs at VIT</h2>

  <!-- Form to Add New Club -->
  <form id="clubForm" class="mb-4">
    <input type="text" class="form-control" id="clubName" placeholder="Club Name" required>
    <textarea class="form-control" id="clubDescription" placeholder="Club Description" required></textarea>
    <button type="submit" class="btn btn-primary">Add Club</button>
  </form>

  <!-- Bootstrap Pills -->
  <ul class="nav nav-pills mb-3" id="clubTabs" role="tablist"></ul>

  <!-- Tab Content -->
  <div class="tab-content" id="clubTabContent"></div>
</div>

<!-- JS Links -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  $(document).ready(function () {
    const CLUB_KEY = "vitClubs";

    function loadClubs() {
      const clubs = JSON.parse(localStorage.getItem(CLUB_KEY)) || [];
      const tabList = $("#clubTabs");
      const tabContent = $("#clubTabContent");

      tabList.empty();
      tabContent.empty();

      clubs.forEach((club, index) => {
        const activeClass = index === 0 ? "active" : "";
        const showClass = index === 0 ? "show active" : "";

        tabList.append(`
          <li class="nav-item" role="presentation">
            <button class="nav-link ${activeClass}" id="tab-${index}" data-bs-toggle="pill" data-bs-target="#content-${index}" type="button" role="tab">${club.name}</button>
          </li>
        `);

        tabContent.append(`
          <div class="tab-pane fade ${showClass}" id="content-${index}" role="tabpanel">
            <div class="card p-3">
              <h5>${club.name}</h5>
              <p>${club.description}</p>
            </div>
          </div>
        `);
      });
    }

    $("#clubForm").submit(function (e) {
      e.preventDefault();
      const name = $("#clubName").val().trim();
      const description = $("#clubDescription").val().trim();

      if (name && description) {
        const clubs = JSON.parse(localStorage.getItem(CLUB_KEY)) || [];
        clubs.push({ name, description });
        localStorage.setItem(CLUB_KEY, JSON.stringify(clubs));
        $("#clubForm")[0].reset();
        loadClubs();
      }
    });

    loadClubs();
  });
</script>

</body>
</html>

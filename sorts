<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sorting Algorithms</title>
</head>
<body>
    <h2>Sorting</h2>
    <label for="numbers">Enter numbers (comma separated): </label>
    <input type="text" id="numbers" placeholder="e.g. 5,3,8,1,2">
    <br>
    <br>
    <label for="algorithm">Choose Sorting Algorithm:</label>
    <select id="algorithm">
        <option value="bubble">Bubble Sort</option>
        <option value="insertion">Insertion Sort</option>
        <option value="selection">Selection Sort</option>
    </select>

    <button onclick="sortArray()">Sort</button>
    
    <h3>Sorted Output:</h3>
    <p id="result"></p>

    <script>
        function bubbleSort(arr) {
            let n = arr.length;
            for (let i = 0; i < n - 1; i++) {
                for (let j = 0; j < n - i - 1; j++) {
                    if (arr[j] > arr[j + 1]) {
                        [arr[j], arr[j + 1]] = [arr[j + 1], arr[j]];
                    }
                }
            }
            return arr;
        }

        function insertionSort(arr) {
            let n = arr.length;
            for (let i = 1; i < n; i++) {
                let key = arr[i];
                let j = i - 1;
                while (j >= 0 && arr[j] > key) {
                    arr[j + 1] = arr[j];
                    j--;
                }
                arr[j + 1] = key;
            }
            return arr;
        }

        function selectionSort(arr) {
            let n = arr.length;
            for (let i = 0; i < n - 1; i++) {
                let minIndex = i;
                for (let j = i + 1; j < n; j++) {
                    if (arr[j] < arr[minIndex]) {
                        minIndex = j;
                    }
                }
                if (minIndex !== i) {
                    [arr[i], arr[minIndex]] = [arr[minIndex], arr[i]];
                }
            }
            return arr;
        }

        function sortArray() {
            input = document.getElementById("numbers").value;
            arr = input.split(",").map(Number);
            algorithm = document.getElementById("algorithm").value;
            sortedArr = [];

            if (algorithm === "bubble") {
                sortedArr = bubbleSort(arr);
            } else if (algorithm === "insertion") {
                sortedArr = insertionSort(arr);
            } else if (algorithm === "selection") {
                sortedArr = selectionSort(arr);
            }

            document.getElementById("result").innerText = "Sorted Array: " + sortedArr.join(", ");
        }
    </script>
</body>
</html>

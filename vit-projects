<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  $(document).ready(function () {
    // Load stored data on page load
    loadProjects("course");
    loadProjects("edi");

    // Add Course Project
    $('#courseForm').submit(function (e) {
      e.preventDefault();
      const title = $('#courseTitle').val().trim();
      const desc = $('#courseDesc').val().trim();
      if (title && desc) {
        addProject("course", title, desc);
        $('#courseTitle').val('');
        $('#courseDesc').val('');
      }
    });

    // Add EDI Project
    $('#ediForm').submit(function (e) {
      e.preventDefault();
      const title = $('#ediTitle').val().trim();
      const desc = $('#ediDesc').val().trim();
      if (title && desc) {
        addProject("edi", title, desc);
        $('#ediTitle').val('');
        $('#ediDesc').val('');
      }
    });

    function addProject(type, title, description) {
      const key = type + "Projects";
      let projects = JSON.parse(localStorage.getItem(key)) || [];
      projects.push({ title, description });
      localStorage.setItem(key, JSON.stringify(projects));
      loadProjects(type);
    }

    function loadProjects(type) {
      const key = type + "Projects";
      let projects = JSON.parse(localStorage.getItem(key)) || [];
      const tableBody = $(`#${type}Table tbody`);
      tableBody.empty();
      projects.forEach(proj => {
        tableBody.append(`<tr><td>${proj.title}</td><td>${proj.description}</td></tr>`);
      });
    }
  });
</script>

</body>
</html>

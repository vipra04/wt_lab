  <!-- Bootstrap Pills -->
  <ul class="nav nav-pills mb-3" id="projectTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="course-tab" data-bs-toggle="pill" data-bs-target="#course" type="button" role="tab">Course Projects</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="edi-tab" data-bs-toggle="pill" data-bs-target="#edi" type="button" role="tab">EDI Projects</button>
    </li>
  </ul>

  <!-- Tab Content -->
  <div class="tab-content" id="projectTabContent">
    <!-- Course Projects -->
    <div class="tab-pane fade show active" id="course" role="tabpanel">
      <h4>Course Projects</h4>
      <form id="courseForm" class="form-section">
        <input type="text" class="form-control" id="courseTitle" placeholder="Project Title" required />
        <textarea class="form-control" id="courseDesc" placeholder="Project Description" required></textarea>
        <button type="submit" class="btn btn-primary">Add Course Project</button>
      </form>
      <table class="table table-bordered mt-3" id="courseTable">
        <thead><tr><th>Title</th><th>Description</th></tr></thead>
        <tbody></tbody>
      </table>
    </div>

    <!-- EDI Projects -->
    <div class="tab-pane fade" id="edi" role="tabpanel">
      <h4>EDI Projects</h4>
      <form id="ediForm" class="form-section">
        <input type="text" class="form-control" id="ediTitle" placeholder="Project Title" required />
        <textarea class="form-control" id="ediDesc" placeholder="Project Description" required></textarea>
        <button type="submit" class="btn btn-success">Add EDI Project</button>
      </form>
      <table class="table table-bordered mt-3" id="ediTable">
        <thead><tr><th>Title</th><th>Description</th></tr></thead>
